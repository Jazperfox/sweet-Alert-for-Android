<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="10dp" android:gravity="center_horizontal">
        <shape android:shape="oval">
            <solid android:color="@color/info_stroke_color"/>
            <size android:height="5dp" android:width="5dp"/>
        </shape>
    </item>

    <item android:top="20dp" android:bottom="8dp" android:gravity="center_horizontal">
        <shape android:shape="rectangle">
            <solid android:color="@color/info_stroke_color"/>
            <corners android:radius="2dp"/>
            <size android:width="4dp"/>
        </shape>
    </item>
</layer-list>